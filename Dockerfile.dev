FROM node:20-alpine

WORKDIR /app

# Install build dependencies for native modules
RUN apk add --no-cache build-base python3

# Install dependencies
COPY package*.json ./

# Force compilation from source for native modules
ENV npm_config_build_from_source=true

RUN npm ci

# Copy source code
COPY . .

EXPOSE 3001 5173

CMD ["npm", "run", "dev"]